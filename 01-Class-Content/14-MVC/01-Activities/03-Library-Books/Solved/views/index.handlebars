<h1>Library Books</h1>

<h2>Books you've already read</h2>
<!-- Loop through the books and if 'read' is true, list them below -->
<ul>
  {{#each library}}
  {{#if read}}
  <li>
    <p>Title: {{title}}</p>
    <p>Author: {{author}}</p>
    <p>Read: {{read}}</p>
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Books you haven't read yet</h2>
<!-- Loop through the books and if 'read' is false, list them below -->
<ul>
  {{#each library}}
  {{#unless read}}
  <li>
    <p>Title: {{title}}</p>
    <p>Author: {{author}}</p>
    <p>Read: {{read}}</p>
  </li>
  {{/unless}}
  {{/each}}
</ul>